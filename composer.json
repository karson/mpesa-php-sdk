{
    "name": "karson/mpesa-php-sdk",
    "description": "",
    "keywords": [
        "karson",
        "mpesa-sdk",
        "mpesa-api",
        "mpesa",
        "payment-gateway",
        "vodacom-mozambique",
        "payment-gateway"
    ],
    "homepage": "https://github.com/karson/mpesa-php-sdk",
    "license": "MIT",
    "type": "library",
    "minimum-stability": "dev",
    "prefer-stable": true,
    "authors": [
        {
            "name": "Karson Adam",
            "email": "karson@turbohost.co.mz",
            "role": "Developer"
        }
    ],
    "require": {
        "php": ">=8.1",
        "ext-curl": "*",
        "ext-json": "*",
        "guzzlehttp/guzzle": "^7.0",
        "illuminate/support": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.3.3"
    },
    "autoload": {
        "psr-4": {
            "Karson\\MpesaPhpSdk\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Karson\\MpesaPhpSdk\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage"

    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "laravel": {
            "providers": [
                "Karson\\MpesaPhpSdk\\Laravel\\ServiceProvider"
            ],
            "aliases": {
                "Mpesa": "Karson\\MpesaPhpSdk\\Laravel\\Mpesa"
            }
        }
    }
}
